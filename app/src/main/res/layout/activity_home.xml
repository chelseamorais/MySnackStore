<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC9FA8EE"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/headerTextView"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:text="MySnackStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Current Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_location"
                    android:text="Get Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item1ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/burger" />


                <TextView
                    android:id="@+id/item1TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Burger"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item1PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$6.00"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/item1AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/item1QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/item1SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item2ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/peppizza" />

                <TextView
                    android:id="@+id/item2TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pizza"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item2PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$10.00"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/item2AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/item2QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/item2SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item3ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fries" />

                <TextView
                    android:id="@+id/item3TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fries"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item3PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$4.00"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/item3AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/item3QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"/>


                <Button
                    android:id="@+id/item3SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item4ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cupcake" />

                <TextView
                    android:id="@+id/item4TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cake"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item4PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$8.00"
                    android:padding="8dp"/>
                <Button
                    android:id="@+id/item4AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/item4QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/item4SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item5ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cake" />

                <TextView
                    android:id="@+id/item5TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cupcake"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item5PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$8.00"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/item5AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/item5QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/item5SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item6ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/noodles" />

                <TextView
                    android:id="@+id/item6TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Noodles"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item6PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$14.00"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/item6AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/item6QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/item6SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item7ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sushi" />

                <TextView
                    android:id="@+id/item7TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sushi"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item7PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="$18.00"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/item7AddButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+" />
                <TextView
                    android:id="@+id/item7QuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0" />

                <Button
                    android:id="@+id/item7SubtractButton"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="-" />

            </LinearLayout>

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Total Price: $0.00"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

</RelativeLayout>
